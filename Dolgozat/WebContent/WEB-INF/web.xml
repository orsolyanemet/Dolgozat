<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
	<filter>
		<filter-name>PageFilterAdmin</filter-name>
		<filter-class>ro.edu.ubb.filter.PageFilterAdmin</filter-class>
	</filter>
	<filter>
		<filter-name>PageFilterUser</filter-name>
		<filter-class>ro.edu.ubb.filter.PageFilterUser</filter-class>
	</filter>
	<filter>
		<filter-name>PageFilterCommon</filter-name>
		<filter-class>ro.edu.ubb.filter.PageFilterCommon</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>PageFilterAdmin</filter-name>
		<url-pattern>/adminmenu.jsp</url-pattern>
		<url-pattern>/adduser.jsp</url-pattern>
		<url-pattern>/addroom.jsp</url-pattern>
		<url-pattern>/listrequests.jsp</url-pattern>
		<url-pattern>/listusers.jsp</url-pattern>
		<url-pattern>/listroomtypes.jsp</url-pattern>
		<url-pattern>/listrooms.jsp</url-pattern>
		<url-pattern>/deleteuser.jsp</url-pattern>
		<url-pattern>/deleteroom.jsp</url-pattern>
		<url-pattern>/deleterequest.jsp</url-pattern>	
		<url-pattern>/edituser.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PageFilterUser</filter-name>
		<url-pattern>/usermenu.jsp</url-pattern>
		<url-pattern>/listuserrequests.jsp</url-pattern>
		<url-pattern>/deleteuserrequest.jsp</url-pattern>
		<url-pattern>/changepassword.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PageFilterCommon</filter-name>
		<url-pattern>/roomschedule.jsp</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>ro.edu.ubb.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
</web-app>
